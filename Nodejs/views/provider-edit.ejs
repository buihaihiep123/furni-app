<%- include('header')%> 
<%- include('aside')%>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Advanced Form Elements
      <small>Preview</small>
    </h1>
    <ol class="breadcrumb">
      <li>
        <a href="#"><i class="fa fa-dashboard"></i> Home</a>
      </li>
      <li><a href="#">Forms</a></li>
      <li class="active">Advanced Elements</li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="row">
      <div class="col-md-6">
        <form action="/provider-update/<%= cat.provider_id %>" method="post" role="form" class="box box-info">
          <div class="box-header">
            <h3 class="box-title"><i class="fa fa-gear"></i> Sửa thông tin loại sản phẩm</h3>
          </div>
          <div class="box-body">

            <!-- Color Picker -->
            <div class="form-group">
              <label>Tên nhà cung cấp:</label>
              <input type="text" name="provider_name" class="form-control my-colorpicker1" value="<%= cat.provider_name %>" />
            </div>
            <div class="form-group">
                <label>địa chỉ:</label>
                <input type="text" name="address" class="form-control my-colorpicker1" value="<%= cat.address %>" />
              </div>
              <div class="form-group">
                <label>Tên loại sản phẩm:</label>
                <input type="text" name="email" class="form-control my-colorpicker1" value="<%= cat.email %>" />
              </div>
              <div class="form-group">
                <label>Tên loại sản phẩm:</label>
                <input type="text" name="phone_number" class="form-control my-colorpicker1" value="<%= cat.phone_number %>" />
              </div>
            <div class="form-group">
              <label>trạng thái:</label>

              <div class="radio">
                <label>
                  <input type="radio" name="status" value="0"  <%= cat.status == 0 ? 'checked':''%>/> Tạm
                  ẩn </label
                >
              </div>
              <div class="radio">
                <label>
                  <input type="radio" name="status" value="1" <%= cat.status == 1 ? 'checked':''%>/> Hiển thị
                </label>
              </div>
              <!-- /.input group -->
            </div> 
            <div>
              <a href="/provider" class="btn btn-primary active" aria-current="page"><i class="fa fa-arrow-left"></i> Quay lại</a>
              <button class="btn btn-primary" type="submit"><i class="fa fa-save"></i> Lưu</button>
            </div>
          </div>
        </form>
      </div>
      <!-- /.col (right) -->
    </div>
    <!-- /.row -->
  </section>
  <!-- /.content -->
</div>

<%- include('footer')%>
