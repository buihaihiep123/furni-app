<%- include('header') %> <%- include('aside') %>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Simple Tables
      <small>preview of simple tables</small>
    </h1>
    <ol class="breadcrumb">
      <li>
        <a href="#"><i class="fa fa-dashboard"></i> Home</a>
      </li>
      <li><a href="#">Tables</a></li>
      <li class="active">Simple</li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">
    <!-- /.row -->
    <div class="row">
      <div class="col-xs-12">
        <div class="box">
          <div class="box-header">
            <h3 class="box-title">
              <i class="fa fa-th"></i> Quản lý tin tức
            </h3>
            <a
              href="/new-add"
              class="btn btn-primary active"
              style="margin-left: 20px"
              aria-current="page"
              >Thêm mới</a
            >
            <div class="box-tools">
              <form action="" method="get" role="form">
                <div class="input-group input-group-sm" style="width: 250px">
                  <input
                    type="text"
                    name="name"
                    class="form-control pull-right"
                    placeholder="Search"
                  />

                  <div class="input-group-btn">
                    <button type="submit" class="btn btn-default">
                      <i class="fa fa-search"></i>
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
          <!-- /.box-header -->
          <div class="box-body table-responsive no-padding">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>TT</th>
                  <th>Tiêu đề</th>
                  <!-- <th>Nội dung</th> -->
                  <th>Ngày đăng</th>
                  <th>Ảnh</th>
                  <th>Chức năng</th>
                </tr>
              </thead>
              <tbody>
                <% if (data && data.length > 0) { %> <% data.map(function(ne, index)
                { %>
                <tr>
                  <td><%= index +1 %></td>
                  <td><%= ne.title %></td>
                  <!-- <td><%- ne.content %></td> -->
                  <td><%= ne.upload_date.toLocaleString() %></td> 
                  <td><img style="width: 100px;height: 70px;" src="uploads/<%= ne.image %>" alt=""></td>

                  <td>
                    <a
                      href="/new-edit/<%= ne.new_id %>"
                      class="btn btn-warning fa fa-edit"
                    ></a>
                    <a 
                      href="/new-delete/<%= ne.new_id %>"
                      class="btn btn-danger fa fa-trash"
                    ></a>
                  </td>
                </tr>
                <% }) %> <% } else { %>
                <tr>
                  <td colspan="4">Không có dữ liệu.</td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
          <!-- /.box-body -->
        </div>
        <!-- /.box -->
        
      </div>
      <div class="box-footer clearfix">
        <ul class="pagination pagination-sm no-margin pull-right">
          <li>
            <a href="/new/?page=<%= _page > 1 ? _page - 1 : 1 %>"
              >&laquo;</a
            >
          </li>

          <% for(i=1;i<= totalPage;i++){%> 
          <%if(_name){%>
          <li class="<%=_page==i?'active':''%>">
            <a href="/new/?page= <%=i%> &name=<%=_name%>"><%=i%></a>
          </li>
          <%} else{%>
          <li class="<%= _page==i?'active':''%>">
            <a href="/new/?page= <%=i%>"><%=i%></a>
          </li>
          <%} %> <%} %>
          <li>
            <a href="/new/?page=<%=_page< totalPage? _page+1:totalPage %>"
              >&raquo;</a
            >
          </li>
        </ul>
      </div>
    </div>
  </section>
  <!-- /.content -->
</div>
<%- include('footer') %>
