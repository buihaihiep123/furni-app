<%- include('header') %> <%- include('aside') %>

<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Simple Tables
      <small>preview of simple tables</small>
    </h1>
    <ol class="breadcrumb">
      <li>
        <a href="#"><i class="fa fa-dashboard"></i> Home</a>
      </li>
      <li><a href="#">Tables</a></li>
      <li class="active">Simple</li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">
    <!-- /.row -->
    <div class="row">
      <div class="col-xs-12">
        <div class="box">
          <div class="box-header">
            <h3 class="box-title">
              <i class="fa fa-th"></i> Quản lý sản phẩm
            </h3>
            <a
              href="/product-add"
              class="btn btn-primary active"
              style="margin-left: 20px"
              aria-current="page"
              >Thêm mới</a
            >
            <div class="box-tools">
              <form action="" method="get" role="form">
                <div class="input-group input-group-sm" style="width: 250px">
                  <input
                    type="text"
                    name="name"
                    class="form-control pull-right"
                    placeholder="Search"
                  />

                  <div class="input-group-btn">
                    <button type="submit" class="btn btn-default">
                      <i class="fa fa-search"></i>
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
          <!-- /.box-header -->
          <div class="box-body table-responsive no-padding">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>TT</th>
                  
                  <th>Loại</th>
                  <th>Ảnh sản phẩm</th>
                  <th>Tên sản phẩm</th>
                  <th>Giá cũ/giá khuyến mại</th>
                  <th>Số lượng</th>
                  <th>Nhà cung cấp</th>
                  <!-- <th>Mô tả</th> -->
                  <th>Trạng thái</th>
                  <!-- <th>Trạng thái</th> -->
                  <th>Chức năng</th>
                </tr>
              </thead>
              <tbody>
                <% if (data && data.length > 0) { %> <% data.map(function(pro, index)
                { %>
                <tr>
                  <td><%= index +1 %></td>
                  
                  <td><%= pro.catname %></td>
                  <td><img style="width: 100px;height: 70px;" src="/uploads/<%= pro.image %>" alt=""></td>
                  <td><%= pro.product_name %></td>
                 <td>cũ: <%- `<script>document.write(formatCurrency(${pro.old_price}))</script>` %>/khuyến mại: <%- `<script>document.write(formatCurrency(${pro.price}))</script>` %></td>
                  <td><%= pro.quantity %></td>             
                  <!-- <td ><%- pro.description %></td> -->
                  <td><%= pro.provname %></td>
                  <td><%= pro.status == 0 ? 'Tạm ẩn' : 'Hiển thị' %></td>
                  <td>
                    <a
                      href="/product-edit/<%= pro.product_id %>"
                      class="btn btn-warning fa fa-edit"
                    ></a>
                    <a 
                      href="/product-delete/<%= pro.product_id %>"
                      class="btn btn-danger fa fa-trash"
                    ></a>
                  </td>
                </tr>
                <% }) %> <% } else { %>
                <tr>
                  <td colspan="4">Không có dữ liệu.</td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
          <!-- /.box-body -->
        </div>
        <!-- /.box -->
        
      </div>
      <div class="box-footer clearfix">
        <ul class="pagination pagination-sm no-margin pull-right">
          <li>
            <a href="/product/?page=<%= _page > 1 ? _page - 1 : 1 %>"
              >&laquo;</a
            >
          </li>

          <% for(i=1;i<= totalPage;i++){%> 
          <%if(_name){%>
          <li class="<%=_page==i?'active':''%>">
            <a href="/product/?page= <%=i%> &name=<%=_name%>"><%=i%></a>
          </li>
          <%} else{%>
          <li class="<%= _page==i?'active':''%>">
            <a href="/product/?page= <%=i%>"><%=i%></a>
          </li>
          <%} %> <%} %>
          <li>
            <a href="/product/?page=<%=_page< totalPage? _page+1:totalPage %>"
              >&raquo;</a
            >
          </li>
        </ul>
      </div>
    </div>
  </section>
  <!-- /.content -->
</div>
<%- include('footer') %>
